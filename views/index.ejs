<!DOCTYPE html>
<!-- @TODO: comments  -->
<!-- @TODO: change post.location to title -->
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>Travel Tales</title>

    <!-- STYLESHEETS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/css/styles.css">
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

    <!-- VENDOR SCRIPTS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <!-- APPLICATION SCRIPTS -->
    <script src="/static/base.js"></script>
  </head>
  <body>
    <!-- header images -->
    <div class="container">  
      <div class="row">
        <div class="col-md-8">
            <img  id="heart" src='http://www.johnboccio.com/quotes/IheartQuote580x300.jpg'>
        </div>
        <div class="col-md-4 col-md-offset-8">
        <img id="movie" src='http://www.jammadesigns.com/media/home.theater.decor.Movie.Ticket.jpg'>
        </div>
      </div>
    </div>

    <!-- title -->
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-2">
        <h3>Share your favorite movie quote!</h3>
        </div>
      </div>
    </div> 

    <!-- posts -->
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <!-- create post form -->
          <form class="form-group form-inline" id="newPost">
            <input class="form-control" id="title" type="text" name="location" placeholder="Movie title...">
            <input class="form-control" style="width:680px" id="movieQuote" type="text" name="description" placeholder="Quote...">
            <input class="btn btn-primary" id="submitQuote" type="submit" value="Post">
          </form> 
          <ul class="posts list-group">
            <% for(var i=posts.length-1; i>=0; i--) { %>
            <li class="post"><strong><font size='5'><%= posts[i].location %>:</font></strong> <br><%= posts[i].description %><br><button><img id="like" data-id="<%= posts[i]._id %>" src="http://iconfever.com/images/portfolio/thumbs/freephotoshoptutorials.org-heart-icon.jpg"></button><small> <%=posts[i].likeCount%> likes</small><span data-id="<%= posts[i]._id %>" class='close delete'>X</span></li>
            <%}; %>
          </ul>
        </div>
    </div>
    <!-- warning modal for when empty form is submitted -->
    <div class="modal fade" tabindex="-1" id="fail" role="dialog">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <br>
          <h2>Nothing to post<br><br><button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button><br></h2>
        </div>
      </div>
    </div>
  </body>
</html>









